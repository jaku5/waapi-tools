<Window x:Class="PropertyContainerAuditor.UI.Dialogs.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="180" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        SizeToContent="Height"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="5"
                      GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="0"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="ButtonFocusVisualStyle">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border CornerRadius="6"
                                BorderBrush="{DynamicResource FocusStrokeColorOuterBrush}"
                                BorderThickness="2"
                                Margin="-3"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{DynamicResource SolidBackgroundFillColorQuarternaryBrush}" />
        <Border Grid.Row="1" Background="{DynamicResource SolidBackgroundFillColorBaseBrush}" />

        <Grid Grid.Row="0" Margin="25,22,25,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding TitleText}" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,12" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            
            <TextBlock Grid.Row="1" Text="{Binding ProgressText}" Margin="0,0,0,10" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left"/>

            <ProgressBar Grid.Row="2" Value="{Binding ProgressValue}" Maximum="100" Height="8" Margin="0,0,0,10" />

            <TextBlock Grid.Row="3" Text="{Binding CurrentStatus}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" HorizontalAlignment="Left"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20,24,20,24">
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True" Margin="4,0,4,1" Padding="10,5" Height="32" HorizontalAlignment="Right" Width="80" />
        </Grid>
    </Grid>
</Window>
