<Window x:Class="ActormixerSanitizer.UI.Dialogs.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="180" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        SizeToContent="Height"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="5"
                      GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="0"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{DynamicResource SolidBackgroundFillColorQuarternaryBrush}" CornerRadius="5"/>
        <StackPanel Margin="25,25,25,25" VerticalAlignment="Center">
            <TextBlock x:Name="TitleTextBlock" Text="Operation in Progress" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15" TextWrapping="Wrap"/>
            <ProgressBar x:Name="ProgressBar" Height="10" Margin="0,0,0,10" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="MessageTextBlock" Text="Please wait..." FontSize="14" Margin="0,0,0,5" TextWrapping="Wrap"/>
            <TextBlock x:Name="StatusTextBlock" Text="" FontSize="12" Opacity="0.7" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
