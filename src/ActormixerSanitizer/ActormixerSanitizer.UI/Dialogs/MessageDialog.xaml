<Window x:Class="ActormixerSanitizer.UI.Dialogs.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="{DynamicResource {x:Static SystemColors.WindowBrush}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageTextBlock" Grid.Row="0" Margin="10" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="OK" Margin="10" Padding="10,5" Click="OkButton_Click" IsDefault="True" HorizontalAlignment="Stretch">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Visibility, ElementName=CancelButton}" Value="Collapsed">
                                <Setter Property="Grid.ColumnSpan" Value="2" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="CancelButton" Grid.Column="2" Content="Cancel" Margin="10" Padding="10,5" Click="CancelButton_Click" IsCancel="True" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>